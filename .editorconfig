# http://editorconfig.org
root = true

[*]
charset = utf-8
insert_final_newline = true

end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 100

trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[{go.mod,go.sum,*.go}]
indent_style = tab

[*.rs]
# Keep in sync with rustfmt
indent_size = 4
