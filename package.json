{
  "name": "codefast",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:force": "turbo build --force",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules && rm -rf pnpm-lock.yaml",
    "dev": "turbo dev",
    "postinstall": "pnpm exec simple-git-hooks",
    "lint": "turbo lint -- --fix",
    "lint:check": "turbo lint",
    "package:install": "pnpm install",
    "package:reinstall": "pnpm run clean && pnpm install",
    "package:update": "pnpm update --interactive --recursive",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "release": "turbo run build --filter=docs^... && changeset publish",
    "start": "turbo start",
    "version-packages": "changeset version"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --allow-empty",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 80,
    "singleQuote": true,
    "tailwindAttributes": [
      "classNames"
    ],
    "tailwindFunctions": [
      "tv"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@codefast/config-typescript": "workspace:*",
    "@codefast/eslint-config": "workspace:*",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.0",
    "turbo": "^2.1.3"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=20"
  }
}
