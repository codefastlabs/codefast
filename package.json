{
  "name": "codefast",
  "private": true,
  "type": "module",
  "scripts": {
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "prebuild": "pnpm -r exec rm -rf .next dist",
    "build": "turbo run build",
    "build:docs": "turbo run build --filter=@app/docs...",
    "build:packages": "turbo run build --filter=@codefast*/*...",
    "changeset": "changeset",
    "changeset:pre:enter": "changeset pre enter canary",
    "changeset:pre:exit": "changeset pre exit",
    "check:licenses": "pnpm licenses list",
    "check:outdated": "pnpm outdated --recursive",
    "clean": "turbo clean",
    "clean:cache": "pnpm store prune && turbo clean",
    "clean:modules": "pnpm -r exec rm -rf node_modules && rm -rf node_modules pnpm-lock.yaml",
    "codefast": "codefast",
    "deploy:preview": "vercel deploy --archive=tgz",
    "dev": "turbo run dev --concurrency 11",
    "dev:docs": "turbo run dev --concurrency 11 --filter=@app/docs...",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "package:install": "pnpm install",
    "package:reinstall": "pnpm clean && pnpm package:install && pnpm build:packages",
    "package:update": "pnpm update --latest --interactive --recursive",
    "precommit": "lint-staged",
    "prepare": "simple-git-hooks",
    "start": "turbo run start",
    "start:docs": "turbo run start --filter=@app/docs...",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:ci": "turbo run test:coverage:ci",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check",
    "workspace:list": "pnpm list --depth=0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@codefast/cli": "workspace:*",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "simple-git-hooks": "^2.13.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "test-exclude": "^7.0.1"
    }
  }
}
