{
  "name": "codefast",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:docs": "turbo run build --filter=@app/docs...",
    "build:packages": "turbo run build --filter=@codefast*/*",
    "changeset": "changeset",
    "changeset:pre:enter": "changeset pre enter canary",
    "changeset:pre:exit": "changeset pre exit",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rimraf node_modules",
    "deploy:preview": "vercel deploy --archive=tgz",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=@app/docs...",
    "lint": "biome lint",
    "lint:ci": "biome ci",
    "lint:fix": "biome check --write --unsafe",
    "format": "biome format --write",
    "package:install": "pnpm install",
    "package:reinstall": "pnpm clean && pnpm install && pnpm build:packages",
    "package:update": "pnpm update --latest --recursive",
    "start": "turbo run start",
    "start:docs": "turbo run start --filter=@app/docs...",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:ci": "turbo run test:coverage:ci",
    "test:watch": "turbo run test:watch"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@codefast/typescript-config": "workspace:*",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "cross-env": "^7.0.3",
    "lint-staged": "^16.1.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": "^22"
  }
}
