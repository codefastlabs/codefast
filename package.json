{
  "name": "codefast",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=\"./packages/*\"",
    "changeset": "changeset",
    "changeset:publish": "pnpm run build:packages && changeset publish",
    "changeset:version": "changeset version",
    "clean": "turbo run clean",
    "dev": "turbo run dev --concurrency=11",
    "postinstall": "pnpm exec simple-git-hooks",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "package:install": "pnpm install",
    "package:reinstall": "pnpm clean && pnpm install && pnpm build",
    "package:update": "pnpm update --latest --interactive --recursive",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 120,
    "singleQuote": true,
    "tailwindAttributes": [
      "classNames"
    ],
    "tailwindFunctions": [
      "tv"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.9",
    "@codefast/config-typescript": "workspace:*",
    "@codefast/eslint-config": "workspace:*",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.3",
    "prettier-plugin-tailwindcss": "0.6.9",
    "simple-git-hooks": "2.11.1",
    "turbo": "2.3.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@19.0.0-rc.1",
      "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
      "react": "19.0.0-rc-7ac8e612-20241113",
      "react-dom": "19.0.0-rc-7ac8e612-20241113",
      "react-is": "19.0.0-rc-7ac8e612-20241113"
    }
  }
}
