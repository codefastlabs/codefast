{
  "name": "codefast",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:docs": "turbo run build --filter=@app/docs...",
    "build:packages": "turbo run build --filter=@codefast*/*...",
    "check-types": "turbo run check-types",
    "clean": "turbo clean",
    "clean:cache": "pnpm store prune && turbo clean",
    "clean:modules": "pnpm -r exec rm -rf node_modules && rm -rf node_modules pnpm-lock.yaml",
    "clean:next": "pnpm -r exec rm -rf .next",
    "deploy:preview": "vercel deploy --archive=tgz",
    "deps:audit": "pnpm audit",
    "deps:audit:fix": "pnpm audit --fix",
    "deps:install": "pnpm install",
    "deps:licenses": "pnpm licenses list",
    "deps:outdated": "pnpm outdated --recursive",
    "deps:reinstall": "pnpm clean && pnpm deps:install && pnpm build:packages",
    "deps:upgrade": "pnpm up --latest --interactive --recursive",
    "dev": "pnpm clean:next && turbo run dev --concurrency 20",
    "dev:docs": "pnpm clean:next && turbo run dev --concurrency 20 --filter=@app/docs...",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "precommit": "lint-staged",
    "prepare": "simple-git-hooks",
    "release": "changeset",
    "release:canary:enter": "changeset pre enter canary",
    "release:canary:exit": "changeset pre exit",
    "start": "turbo run start",
    "start:docs": "turbo run start --filter=@app/docs...",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:ci": "turbo run test:coverage:ci",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "eslint": "^9.34.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "simple-git-hooks": "^2.13.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
