{
  "name": "@codefast/hooks",
  "version": "0.3.5",
  "bugs": {
    "url": "https://github.com/codefastlabs/codefast/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefastlabs/codefast.git",
    "directory": "packages/hooks"
  },
  "license": "MIT",
  "author": "Vuong Phan <mr.thevuong@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/esm/index.js",
        "types": "./dist/esm/index.d.ts"
      },
      "require": {
        "default": "./dist/cjs/index.cjs",
        "types": "./dist/cjs/index.d.cts"
      }
    }
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rslib build",
    "clean": "rm -rf dist",
    "dev": "rslib build --watch",
    "lint": "eslint --max-warnings 0 --cache .",
    "lint:fix": "eslint --max-warnings 0 --cache --fix .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --ci",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@codefast/eslint-config": "workspace:*",
    "@codefast/typescript-config": "workspace:*",
    "@rsbuild/plugin-react": "^1.3.2",
    "@rslib/core": "^0.10.4",
    "@swc/core": "^1.12.11",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@types/react": "^19.0",
    "@types/react-dom": "^19.0",
    "react": "^19.0",
    "react-dom": "^19.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
