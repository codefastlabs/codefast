{
  "name": "@codefast/hooks",
  "version": "0.3.8-canary.2",
  "description": "Collection of reusable React hooks for common functionality",
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "utilities",
    "typescript",
    "monorepo",
    "custom-hooks"
  ],
  "homepage": "https://github.com/codefastlabs/codefast/tree/main/packages/hooks#readme",
  "bugs": {
    "url": "https://github.com/codefastlabs/codefast/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefastlabs/codefast.git",
    "directory": "packages/hooks"
  },
  "license": "MIT",
  "author": "Vuong Phan <mr.thevuong@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rslib build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "rslib build --watch",
    "lint": "TIMING=1 eslint --max-warnings 0",
    "lint:fix": "TIMING=1 eslint --max-warnings 0 --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --ci",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@codefast/eslint-config": "workspace:*",
    "@codefast/typescript-config": "workspace:*",
    "@rslib/core": "^0.16.1",
    "@swc/core": "^1.13.20",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@types/react": "^19.0",
    "@types/react-dom": "^19.0",
    "react": "^19.0",
    "react-dom": "^19.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
