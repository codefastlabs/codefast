{
  "name": "@codefast/ui",
  "version": "0.0.3",
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./badge": {
      "types": "./src/badge.tsx",
      "import": "./dist/badge.mjs",
      "require": "./dist/badge.js"
    },
    "./alert": {
      "types": "./src/alert.tsx",
      "import": "./dist/alert.mjs",
      "require": "./dist/alert.js"
    },
    "./button": {
      "types": "./src/button.tsx",
      "import": "./dist/button.mjs",
      "require": "./dist/button.js"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind.config": "./tailwind.config.ts"
  },
  "files": [
    "dist",
    "src",
    "tailwind.config.ts"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup --watch",
    "generate:component": "turbo gen react-component",
    "lint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "cva": "1.0.0-beta.1",
    "tailwind-merge": "^2.2.2"
  },
  "devDependencies": {
    "@codefast/eslint-config": "workspace:*",
    "@codefast/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.5",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.66",
    "autoprefixer": "^10.0.1",
    "eslint": "^8.57.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^18.0",
    "react-dom": "^18.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
