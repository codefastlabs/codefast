{
  "name": "@codefast/tailwind-variants",
  "version": "0.3.7-canary.0",
  "description": "Tailwind CSS variants utilities with enhanced functionality and advanced type safety",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "variants",
    "css",
    "utilities",
    "typescript",
    "monorepo",
    "styling",
    "type-safe",
    "composition"
  ],
  "homepage": "https://github.com/codefastlabs/codefast/tree/main/packages/tailwind-variants#readme",
  "bugs": {
    "url": "https://github.com/codefastlabs/codefast/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefastlabs/codefast.git",
    "directory": "packages/tailwind-variants"
  },
  "license": "MIT",
  "author": "Vuong Phan <mr.thevuong@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "benchmark": "tsx benchmarks/index.ts",
    "benchmark:advancedCard": "tsx benchmarks/index.ts advancedCard",
    "benchmark:basic": "tsx benchmarks/index.ts basic",
    "benchmark:complexButton": "tsx benchmarks/index.ts complexButton",
    "benchmark:compound": "tsx benchmarks/index.ts compound",
    "benchmark:dataTable": "tsx benchmarks/index.ts dataTable",
    "benchmark:formComponents": "tsx benchmarks/index.ts formComponents",
    "benchmark:large": "tsx benchmarks/index.ts large",
    "benchmark:realWorldComponents": "tsx benchmarks/index.ts realWorldComponents",
    "benchmark:responsiveLayout": "tsx benchmarks/index.ts responsiveLayout",
    "benchmark:slots": "tsx benchmarks/index.ts slots",
    "build": "rslib build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "rslib build --watch",
    "lint": "TIMING=1 eslint . --max-warnings 0",
    "lint:fix": "TIMING=1 eslint --max-warnings 0 --fix .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --ci",
    "test:types": "./scripts/test-types.sh",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@codefast/eslint-config": "workspace:*",
    "@codefast/typescript-config": "workspace:*",
    "@rslib/core": "^0.12.4",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "class-variance-authority": "^0.7.1",
    "eslint": "^9.34.0",
    "expect-type": "^1.2.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "tailwind-variants": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
