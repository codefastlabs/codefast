{
  "name": "@codefast/config-tailwind",
  "version": "0.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/codefastlabs/codefast",
    "directory": "packages/config-tailwind"
  },
  "license": "MIT",
  "author": "Vuong Phan <mr.thevuong@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./colors": {
      "types": "./dist/colors.d.ts",
      "import": "./dist/colors.js",
      "require": "./dist/colors.cjs"
    },
    "./tailwind.config": {
      "types": "./dist/tailwind.config.d.ts",
      "import": "./dist/tailwind.config.js",
      "require": "./dist/tailwind.config.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "devDependencies": {
    "@codefast/config-typescript": "workspace:*",
    "@codefast/eslint-config": "workspace:*",
    "@types/eslint": "9.6.0",
    "eslint": "8.57.0",
    "tailwindcss": "3.4.7",
    "tsup": "8.1.2",
    "typescript": "5.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
