{
  "name": "@codefast/eslint-config",
  "version": "0.3.8-canary.3",
  "description": "Shared ESLint configuration for the monorepo",
  "keywords": [
    "eslint",
    "eslint-config",
    "configuration",
    "linting",
    "javascript",
    "typescript",
    "react",
    "next",
    "monorepo"
  ],
  "homepage": "https://github.com/codefastlabs/codefast/tree/main/packages/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/codefastlabs/codefast/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefastlabs/codefast.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "author": "Vuong Phan <mr.thevuong@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/presets/base.js",
      "require": "./dist/presets/base.cjs",
      "types": "./dist/presets/base.d.ts"
    },
    "./library": {
      "import": "./dist/presets/library.js",
      "require": "./dist/presets/library.cjs",
      "types": "./dist/presets/library.d.ts"
    },
    "./react-app": {
      "import": "./dist/presets/react-app.js",
      "require": "./dist/presets/react-app.cjs",
      "types": "./dist/presets/react-app.d.ts"
    },
    "./next-app": {
      "import": "./dist/presets/next-app.js",
      "require": "./dist/presets/next-app.cjs",
      "types": "./dist/presets/next-app.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rslib build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "rslib build --watch",
    "lint": "TIMING=1 eslint --max-warnings 0",
    "lint:fix": "TIMING=1 eslint --max-warnings 0 --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --ci",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@next/eslint-plugin-next": "^16.0.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-turbo": "^2.6.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.46.3"
  },
  "devDependencies": {
    "@codefast/typescript-config": "workspace:*",
    "@rslib/core": "^0.17.1",
    "@swc/core": "^1.15.0",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "jest": "^30.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
