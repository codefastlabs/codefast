{
  "name": "@codefast/eslint-config",
  "version": "0.3.7-canary.0",
  "description": "Shared ESLint configuration for the monorepo",
  "keywords": [
    "eslint",
    "eslint-config",
    "configuration",
    "linting",
    "javascript",
    "typescript",
    "react",
    "next",
    "monorepo"
  ],
  "homepage": "https://github.com/codefastlabs/codefast/tree/main/packages/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/codefastlabs/codefast/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefastlabs/codefast.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "author": "Vuong Phan <mr.thevuong@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.cjs",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rslib build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "rslib build --watch",
    "lint": "TIMING=1 eslint . --max-warnings 0",
    "lint:fix": "TIMING=1 eslint --max-warnings 0 --fix .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --ci",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@eslint/css": "^0.11.0",
    "@eslint/js": "^9.36.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@next/eslint-plugin-next": "^15.5.2",
    "@stylistic/eslint-plugin": "^5.3.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-turbo": "^2.5.6",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.43.0"
  },
  "devDependencies": {
    "@codefast/typescript-config": "workspace:*",
    "@rslib/core": "^0.13.2",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
